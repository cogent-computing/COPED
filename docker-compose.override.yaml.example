services:

  web:
    volumes:
      - ./dashboards:${VOILA_NOTEBOOK_DIR:?}
      - ./web:/app
    environment:
      DEBUG: 1

  db:
    ports:
      - "5432:5432"

  couch:
    ports:
      - "5984:5984"

  voila:
    build: ./voila
    volumes:
      - type: bind
        source: ./dashboards
        target: ${VOILA_NOTEBOOK_DIR:?}
        read_only: true
    ports:
      - "8866:8866"

  elasticsearch:
    ports:
      - "9200:9200"
      - "9300:9300"
    environment:
      ES_JAVA_OPTS: "-Xmx256m -Xms256m"
      discovery.type: single-node

  logstash:
    ports:
      - "5044:5044"
      - "5000:5000/tcp"
      - "5000:5000/udp"
      - "9600:9600"
    environment:
      LS_JAVA_OPTS: "-Xmx256m -Xms256m"

  kibana:
    ports:
      - "5601:5601"
